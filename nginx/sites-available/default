server {
	listen 80 default_server;
    listen [::]:80 default_server;
    
    # 나의 루트 디렉터리는 해당 경로였다.
    root /usr/share/nginx/html;
    # 거기서 다음과 같은 특정 파일들만을 본다.
    index	index.html	index.htm	index.nginx-debian.html;
    
    server_name _;
    
    location / {
    	# 다음과 같이 변경을 해서 파일을 찾는게 아니도록 설정했다.
    	try_files $uri	$uri/	/index.html;
    }
}